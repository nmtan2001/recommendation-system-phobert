{
    "manifest_version": 3,
    "name": "Recommendation system",
    "description": "Recommend products based on the emotion of reviews",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": ["https://*/*"],
    "permissions": [
        "activeTab",
        "http://127.0.0.1:8000",
        "scripting"
    ]
}